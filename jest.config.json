{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testTimeout": 100000,

  "moduleFileExtensions": ["js", "json", "ts"],

  "roots": [
    "<rootDir>/src",
    "<rootDir>/test"
  ],

  "testRegex": ".*\\.(spec|integration\\.test|e2e-spec)\\.ts$",

  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },

  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],

  "coverageDirectory": "coverage"
}
